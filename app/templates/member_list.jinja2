{% extends "layout.jinja2" %}

{% block title %}Üye Listesi - DernekKapı{% endblock %}

{% block content %}
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>
                <i class="fas fa-users text-primary me-3"></i>
                Üye Listesi
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ url_for('dashboard.index') }}">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active">Üyeler</li>
                </ol>
            </nav>
        </div>
        <div class="btn-toolbar">
            <div class="btn-group me-2">
                <a href="{{ url_for('members.export_csv') }}" class="btn btn-outline-success">
                    <i class="fas fa-file-csv me-2"></i>
                    CSV
                </a>
                <a href="{{ url_for('members.export_excel') }}" class="btn btn-outline-success">
                    <i class="fas fa-file-excel me-2"></i>
                    Excel
                </a>
            </div>
            <a href="{{ url_for('members.create') }}" class="btn btn-primary">
                <i class="fas fa-user-plus me-2"></i>
                Yeni Üye
            </a>
        </div>
    </div>
</div>

<!-- Stats Summary -->
<div class="row mb-4">
    <div class="col-md-2 mb-3">
        <div class="stats-card primary">
            <div class="icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stats-number">{{ members|length }}</div>
            <div class="stats-label">Toplam Üye</div>
        </div>
    </div>
    <div class="col-md-2 mb-3">
        <div class="stats-card warning">
            <div class="icon">
                <i class="fas fa-clock"></i>
            </div>
            <div class="stats-number">{{ members|selectattr('status', 'equalto', 'pending')|list|length }}</div>
            <div class="stats-label">Onay Bekleyen</div>
        </div>
    </div>
    <div class="col-md-2 mb-3">
        <div class="stats-card info">
            <div class="icon">
                <i class="fas fa-receipt"></i>
            </div>
            <div class="stats-number">{{ members|selectattr('status', 'equalto', 'receipt_pending')|list|length }}</div>
            <div class="stats-label">Makbuz Bekleyen</div>
        </div>
    </div>
    <div class="col-md-2 mb-3">
        <div class="stats-card success">
            <div class="icon">
                <i class="fas fa-check"></i>
            </div>
            <div class="stats-number">{{ members|selectattr('status', 'equalto', 'approved')|list|length }}</div>
            <div class="stats-label">Onaylanan</div>
        </div>
    </div>
    <div class="col-md-2 mb-3">
        <div class="stats-card danger">
            <div class="icon">
                <i class="fas fa-times"></i>
            </div>
            <div class="stats-number">{{ members|selectattr('status', 'equalto', 'rejected')|list|length }}</div>
            <div class="stats-label">Reddedilen</div>
        </div>
    </div>
    <div class="col-md-2 mb-3">
        <div class="stats-card info">
            <div class="icon">
                <i class="fas fa-calendar-check"></i>
            </div>
            <div class="stats-number">{{ members|selectattr('membershipYear', 'equalto', current_year|string)|list|length }}</div>
            <div class="stats-label">Bu Yıl</div>
        </div>
    </div>
    <div class="col-md-2 mb-3">
        <div class="stats-card secondary">
            <div class="icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <div class="stats-number">{{ members_without_receipts|length }}</div>
            <div class="stats-label">Makbuz Yüklenmeyen</div>
        </div>
    </div>
</div>

<!-- Search and Filter -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-search"></i>
                            </span>
                            <input type="text" class="form-control" id="searchInput" placeholder="Üye ara...">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" id="yearFilter">
                            <option value="">Tüm Yıllar</option>
                            {% for year in range(2020, current_year + 1) %}
                                <option value="{{ year }}">{{ year }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-outline-secondary w-100" onclick="clearFilters()">
                            <i class="fas fa-times me-2"></i>
                            Filtreleri Temizle
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Members Table -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-table me-2"></i>
                    Üyeler ({{ members|length }} kişi)
                </h5>
            </div>
            <div class="card-body">
                {% if members %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Kimlik No</th>
                                <th>Ad Soyad</th>
                                <th>Telefon</th>
                                <th>GSM</th>
                                <th>Üyelik Yılı</th>
                                <th>Durum</th>
                                <th>Makbuz</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for member in members %}
                            <tr>
                                <td>
                                    <strong>{{ member.identityNumber }}</strong>
                                    <br>
                                    <small class="text-muted">{{ member.nationality }}</small>
                                </td>
                                <td>
                                    <strong>{{ member.firstName }} {{ member.lastName }}</strong>
                                    {% if member.middleName %}
                                        <br>
                                        <small class="text-muted">{{ member.middleName }}</small>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if member.phoneNumber %}
                                        <i class="fas fa-phone text-success me-1"></i>
                                        {{ member.phoneNumber }}
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if member.gsm.number != '0000000' %}
                                        <i class="fas fa-mobile-alt text-info me-1"></i>
                                        {{ member.gsm.countryCode }}{{ member.gsm.operatorCode }}{{ member.gsm.number }}
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge bg-primary">{{ member.membershipYear }}</span>
                                </td>
                                <td>
                                    {% if member.status == 'pending' %}
                                        <span class="badge bg-warning">
                                            <i class="fas fa-clock me-1"></i>
                                            Onay Bekliyor
                                        </span>
                                    {% elif member.status == 'receipt_pending' %}
                                        <span class="badge bg-info">
                                            <i class="fas fa-receipt me-1"></i>
                                            Makbuz Bekliyor
                                        </span>
                                    {% elif member.status == 'approved' %}
                                        <span class="badge bg-success">
                                            <i class="fas fa-check me-1"></i>
                                            Onaylandı
                                        </span>
                                    {% elif member.status == 'rejected' %}
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times me-1"></i>
                                            Reddedildi
                                        </span>
                                    {% else %}
                                        <span class="badge bg-secondary">Bilinmiyor</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge bg-secondary">0</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ url_for('members.detail', member_id=member.id) }}"
                                           class="btn btn-sm btn-outline-primary" title="Detaylar">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-info"
                                                onclick="showMemberDetails('{{ member.id }}')" title="Bilgiler">
                                            <i class="fas fa-info-circle"></i>
                                        </button>
                                        {% if member.status == 'pending' or member.status == 'receipt_pending' %}
                                        <button type="button" class="btn btn-sm btn-success"
                                                onclick="approveMember('{{ member.id }}')" title="Onayla">
                                            <i class="fas fa-check"></i>
                                        </button>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-users fa-4x text-muted mb-4"></i>
                    <h4 class="text-muted mb-3">Henüz üye bulunmuyor</h4>
                    <p class="text-muted mb-4">İlk üyenizi ekleyerek başlayın</p>
                    <a href="{{ url_for('members.create') }}" class="btn btn-primary btn-lg">
                        <i class="fas fa-user-plus me-2"></i>
                        İlk Üyeyi Ekle
                    </a>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Search functionality
    const searchInput = document.getElementById('searchInput');
    const yearFilter = document.getElementById('yearFilter');
    const tableRows = document.querySelectorAll('tbody tr');

    function filterMembers() {
        const searchTerm = searchInput.value.toLowerCase();
        const selectedYear = yearFilter.value;

        tableRows.forEach(row => {
            const name = row.cells[1].textContent.toLowerCase();
            const year = row.cells[4].textContent.trim();
            const phone = row.cells[2].textContent.toLowerCase();
            const gsm = row.cells[3].textContent.toLowerCase();

            const matchesSearch = name.includes(searchTerm) ||
                                phone.includes(searchTerm) ||
                                gsm.includes(searchTerm);
            const matchesYear = !selectedYear || year === selectedYear;

            if (matchesSearch && matchesYear) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    }

    searchInput.addEventListener('input', filterMembers);
    yearFilter.addEventListener('change', filterMembers);

    // Clear filters
    window.clearFilters = function() {
        searchInput.value = '';
        yearFilter.value = '';
        tableRows.forEach(row => {
            row.style.display = '';
        });
    };
});

function showMemberDetails(memberId) {
    // Placeholder for member details modal
    alert('Üye detayları yakında eklenecek!');
}

function approveMember(memberId) {
    if (confirm('Bu üyeyi onaylamak istediğinizden emin misiniz? Üye İçişleri Bakanlığı sistemine gönderilecek.')) {
        // Önceki mesajları temizle
        const successMessage = document.getElementById('successMessage');
        successMessage.innerHTML = '';

        // Alert'leri gizle
        document.getElementById('successAlert').classList.add('d-none');
        document.getElementById('errorAlert').classList.add('d-none');
        document.getElementById('closeApprovalModal').classList.add('d-none');

        // Modal'ı aç
        const modal = new bootstrap.Modal(document.getElementById('approveMemberModal'));
        modal.show();

        // İşlem adımlarını başlat
        startApprovalProcess(memberId);
    }
}

function startApprovalProcess(memberId) {
    const steps = [
        { text: "İçişleri Bakanlığı sistemine bağlanılıyor...", progress: 10, delay: 1000 },
        { text: "Kullanıcı adı giriliyor...", progress: 15, delay: 500 },
        { text: "Şifre giriliyor...", progress: 20, delay: 500 },
        { text: "Giriş yapılıyor...", progress: 25, delay: 2000 },
        { text: "İçişleri Bakanlığı sistemine başarıyla giriş yapıldı", progress: 30, delay: 1000 },
        { text: "Üye kayıt sayfasına gidiliyor...", progress: 35, delay: 1500 },
        { text: "Dernek seçimi yapılıyor...", progress: 40, delay: 1000 },
        { text: "Dernek aranıyor...", progress: 45, delay: 3000 },
        { text: "Eşleşen dernek bulundu", progress: 50, delay: 1000 },
        { text: "Form alanları dolduruluyor...", progress: 55, delay: 2000 },
        { text: "Kişisel bilgiler giriliyor...", progress: 70, delay: 3000 },
        { text: "Kaydet butonuna tıklanıyor...", progress: 80, delay: 1000 },
        { text: "Kaydetme işlemi bekleniyor...", progress: 85, delay: 2000 },
        { text: "Modal aranıyor...", progress: 90, delay: 2000 },
        { text: "Modal bulundu ve görünür", progress: 95, delay: 1000 },
        { text: "Modal mesajı okunuyor...", progress: 98, delay: 1000 },
        { text: "Modal butonuna tıklanıyor...", progress: 99, delay: 500 },
        { text: "İşlem tamamlanıyor...", progress: 100, delay: 1000 }
    ];

    let currentStep = 0;
    const progressBar = document.getElementById('approvalProgress');
    const stepsList = document.getElementById('approvalSteps');

    // İlk adımı göster
    updateStep(steps[currentStep]);

    // Adımları sırayla göster
    function showNextStep() {
        currentStep++;
        if (currentStep < steps.length) {
            updateStep(steps[currentStep]);
            setTimeout(showNextStep, steps[currentStep].delay);
        } else {
            // İşlem tamamlandığında gerçek API çağrısını yap
            submitApprovalRequest(memberId);
        }
    }

    // İlk adımdan sonra devam et
    setTimeout(showNextStep, steps[currentStep].delay);

    function updateStep(step) {
        progressBar.style.width = step.progress + '%';
        progressBar.setAttribute('aria-valuenow', step.progress);

        const stepItem = document.createElement('li');
        stepItem.innerHTML = `<i class="fas fa-spinner fa-spin text-primary me-2"></i>${step.text}`;
        stepsList.appendChild(stepItem);

        // Önceki adımları güncelle
        const previousSteps = stepsList.querySelectorAll('li:not(:last-child)');
        previousSteps.forEach(item => {
            const icon = item.querySelector('i');
            icon.className = 'fas fa-check text-success me-2';
        });
    }
}

function submitApprovalRequest(memberId) {
    fetch(`/members/${memberId}/approve`, {
        method: 'POST',
        headers: {
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            showSuccess(data.message, data.modal_message, data.message_type, data.message_title);
        } else {
            showError(data.message);
        }
    })
    .catch(error => {
        console.error('Error:', error);
        showError('İşlem sırasında bir hata oluştu: ' + error.message);
    });
}

function showSuccess(message, modalMessage, messageType, messageTitle) {
    const successAlert = document.getElementById('successAlert');
    const successMessage = document.getElementById('successMessage');

    // Mesaj türüne göre alert rengini ayarla
    successAlert.className = `alert alert-${messageType} d-none`;

    // Başlık ve mesajı ayarla
    const titleElement = successAlert.querySelector('h6');
    titleElement.innerHTML = `<i class="fas fa-${messageType === 'success' ? 'check' : 'exclamation'}-circle me-2"></i>${messageTitle}`;

    // Ana mesaj
    successMessage.textContent = message;

    // Modal mesajını ayrı göster
    if (modalMessage) {
        const modalMessageDiv = document.createElement('div');
        modalMessageDiv.className = 'mt-3 p-3 bg-light border rounded';
        modalMessageDiv.innerHTML = `
            <strong><i class="fas fa-comment me-2"></i>İçişleri Bakanlığı Mesajı:</strong>
            <div class="mt-2 text-muted">${modalMessage}</div>
        `;
        successMessage.appendChild(modalMessageDiv);
    }

    successAlert.classList.remove('d-none');
    document.getElementById('errorAlert').classList.add('d-none');
    document.getElementById('closeApprovalModal').classList.remove('d-none');

    // Progress bar'ı mesaj türüne göre renklendir
    const progressBar = document.getElementById('approvalProgress');
    progressBar.classList.remove('bg-primary', 'bg-success', 'bg-warning');
    if (messageType === 'success') {
        progressBar.classList.add('bg-success');
    } else {
        progressBar.classList.add('bg-warning');
    }
}

function showError(message) {
    document.getElementById('errorMessage').textContent = message;
    document.getElementById('errorAlert').classList.remove('d-none');
    document.getElementById('successAlert').classList.add('d-none');
    document.getElementById('closeApprovalModal').classList.remove('d-none');

    // Progress bar'ı kırmızı yap
    const progressBar = document.getElementById('approvalProgress');
    progressBar.classList.remove('bg-primary');
    progressBar.classList.add('bg-danger');
}

// Modal kapatma - DOMContentLoaded event'ini bekleyarak
// Modal kapatma - Event delegation kullanarak
document.addEventListener('click', function(event) {
    if (event.target && event.target.id === 'closeApprovalModal') {
        const modal = bootstrap.Modal.getInstance(document.getElementById('approveMemberModal'));
        if (modal) {
            modal.hide();
            // Sayfayı yenile
            setTimeout(() => {
                window.location.reload();
            }, 500);
        }
    }
});
</script>

<!-- Approve Member Modal -->
<div class="modal fade" id="approveMemberModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-cog fa-spin me-2"></i>
                    Üye Onaylama İşlemi
                </h5>
            </div>
            <div class="modal-body">
                <div class="text-center mb-4">
                    <div class="spinner-border text-primary mb-3" role="status">
                        <span class="visually-hidden">İşlem yapılıyor...</span>
                    </div>
                    <h5>İçişleri Bakanlığı Sistemine Kayıt Yapılıyor</h5>
                    <p class="text-muted">Lütfen bekleyin, işlem devam ediyor...</p>
                </div>

                <div class="progress mb-3">
                    <div class="progress-bar progress-bar-striped progress-bar-animated"
                         role="progressbar" style="width: 0%" id="approvalProgress"></div>
                </div>

                <div class="alert alert-info">
                    <h6><i class="fas fa-info-circle me-2"></i>İşlem Adımları:</h6>
                    <ul class="mb-0" id="approvalSteps">
                        <li><i class="fas fa-clock text-warning me-2"></i>İşlem başlatılıyor...</li>
                    </ul>
                </div>

                <div class="alert d-none" id="successAlert">
                    <h6><i class="fas fa-check-circle me-2"></i>İşlem Başarılı!</h6>
                    <p id="successMessage" class="mb-0"></p>
                </div>

                <div class="alert alert-danger d-none" id="errorAlert">
                    <h6><i class="fas fa-exclamation-triangle me-2"></i>Hata Oluştu!</h6>
                    <p id="errorMessage" class="mb-0"></p>
                </div>
            </div>
            <div class="modal-footer" id="approvalModalFooter">
                <button type="button" class="btn btn-secondary d-none" id="closeApprovalModal">
                    <i class="fas fa-times me-2"></i>
                    Kapat
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
