{% extends "layout.jinja2" %}

{% block title %}Yeni Kullanıcı - DernekKapı{% endblock %}

{% block content %}
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>
                <i class="fas fa-user-plus text-primary me-3"></i>
                Yeni Yönetici Kullanıcısı
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ url_for('admin.dashboard') }}">Yönetim Paneli</a></li>
                    <li class="breadcrumb-item"><a href="{{ url_for('admin.users') }}">Yönetici Kullanıcıları</a></li>
                    <li class="breadcrumb-item active">Yeni Kullanıcı</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-edit me-2"></i>
                    Kullanıcı Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <form method="POST">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="username" class="form-label">Kullanıcı Adı *</label>
                            <input type="text" class="form-control" id="username" name="username" required>
                            <div class="form-text">Benzersiz bir kullanıcı adı girin</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="password" class="form-label">Şifre *</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                            <div class="form-text">Güçlü bir şifre seçin</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="full_name" class="form-label">Ad Soyad *</label>
                            <input type="text" class="form-control" id="full_name" name="full_name" required>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="role" class="form-label">Rol *</label>
                            <select class="form-select" id="role" name="role" required>
                                <option value="">Rol seçin</option>
                                <option value="Yönetici">Yönetici</option>
                                <option value="Moderatör">Moderatör</option>
                            </select>
                            <div class="form-text">
                                <strong>Yönetici:</strong> Tüm yetkilere sahip<br>
                                <strong>Moderatör:</strong> Sınırlı yetkiler (kullanıcı oluşturamaz)
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">E-posta</label>
                        <input type="email" class="form-control" id="email" name="email">
                        <div class="form-text">İsteğe bağlı e-posta adresi</div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ url_for('admin.users') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Geri Dön
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>
                            Kullanıcı Oluştur
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
