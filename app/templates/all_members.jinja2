{% extends "layout.jinja2" %}

{% block title %}Tüm Üyeler - DernekKapı{% endblock %}

{% block content %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Tüm Üyeler</h1>
    <a href="{{ url_for('admin.dashboard') }}" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>
        Geri Dön
    </a>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Sistem Geneli Üyeler ({{ members|length }} kişi)</h5>
            </div>
            <div class="card-body">
                {% if members %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Kimlik No</th>
                                <th>Ad Soyad</th>
                                <th>Dernek</th>
                                <th>Telefon</th>
                                <th>GSM</th>
                                <th>Üyelik Yılı</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for member_data in members %}
                            <tr>
                                <td>
                                    <strong>{{ member_data.member.identityNumber }}</strong>
                                    <br>
                                    <small class="text-muted">{{ member_data.member.nationality }}</small>
                                </td>
                                <td>
                                    <strong>{{ member_data.member.firstName }} {{ member_data.member.lastName }}</strong>
                                    {% if member_data.member.middleName %}
                                        <br>
                                        <small class="text-muted">{{ member_data.member.middleName }}</small>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge bg-primary">{{ member_data.association.name }}</span>
                                    <br>
                                    <small class="text-muted">{{ member_data.association.governmentId }}</small>
                                </td>
                                <td>
                                    {% if member_data.member.phoneNumber %}
                                        {{ member_data.member.phoneNumber }}
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if member_data.member.gsm.number != '0000000' %}
                                        {{ member_data.member.gsm.countryCode }}{{ member_data.member.gsm.operatorCode }}{{ member_data.member.gsm.number }}
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge bg-info">{{ member_data.member.membershipYear }}</span>
                                </td>
                                <td>
                                    {% if member_data.member.status == 'pending' %}
                                        <span class="badge bg-warning">
                                            <i class="fas fa-clock me-1"></i>
                                            Onay Bekliyor
                                        </span>
                                    {% elif member_data.member.status == 'approved' %}
                                        <span class="badge bg-success">
                                            <i class="fas fa-check me-1"></i>
                                            Onaylandı
                                        </span>
                                    {% elif member_data.member.status == 'rejected' %}
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times me-1"></i>
                                            Reddedildi
                                        </span>
                                    {% else %}
                                        <span class="badge bg-secondary">{{ member_data.member.status }}</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ url_for('members.detail', member_id=member_data.member.id) }}"
                                           class="btn btn-sm btn-outline-primary" title="Üye Detayları">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ url_for('admin.association_detail', association_id=member_data.association.id) }}"
                                           class="btn btn-sm btn-outline-info" title="Dernek Detayları">
                                            <i class="fas fa-building"></i>
                                        </a>
                                        {% if member_data.member.status == 'pending' %}
                                            <button type="button" class="btn btn-sm btn-outline-success"
                                                    onclick="approveMember('{{ member_data.member.id }}')" title="Onayla">
                                                <i class="fas fa-check"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-danger"
                                                    onclick="rejectMember('{{ member_data.member.id }}')" title="Reddet">
                                                <i class="fas fa-times"></i>
                                        </button>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Sistemde henüz üye bulunmuyor</h5>
                    <p class="text-muted">Dernekler üye ekledikçe burada görünecek</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Member Details Modal -->
<div class="modal fade" id="memberDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Üye Detayları</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="memberDetailsContent">
                <!-- Content will be loaded here -->
            </div>
        </div>
    </div>
</div>

<!-- Approve Member Modal -->
<div class="modal fade" id="approveMemberModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-cog fa-spin me-2"></i>
                    Üye Onaylama İşlemi
                </h5>
            </div>
            <div class="modal-body">
                <div class="text-center mb-4">
                    <div class="spinner-border text-primary mb-3" role="status">
                        <span class="visually-hidden">İşlem yapılıyor...</span>
                    </div>
                    <h5>İçişleri Bakanlığı Sistemine Kayıt Yapılıyor</h5>
                    <p class="text-muted">Lütfen bekleyin, işlem devam ediyor...</p>
                </div>

                <div class="progress mb-3">
                    <div class="progress-bar progress-bar-striped progress-bar-animated"
                         role="progressbar" style="width: 0%" id="approvalProgress"></div>
                </div>

                <div class="alert alert-info">
                    <h6><i class="fas fa-info-circle me-2"></i>İşlem Adımları:</h6>
                    <ul class="mb-0" id="approvalSteps">
                        <li><i class="fas fa-clock text-warning me-2"></i>İşlem başlatılıyor...</li>
                    </ul>
                </div>

                <div class="alert d-none" id="successAlert">
                    <h6><i class="fas fa-check-circle me-2"></i>İşlem Başarılı!</h6>
                    <p id="successMessage" class="mb-0"></p>
                </div>

                <div class="alert alert-danger d-none" id="errorAlert">
                    <h6><i class="fas fa-exclamation-triangle me-2"></i>Hata Oluştu!</h6>
                    <p id="errorMessage" class="mb-0"></p>
                </div>
            </div>
            <div class="modal-footer" id="approvalModalFooter">
                <button type="button" class="btn btn-secondary d-none" id="closeApprovalModal">
                    <i class="fas fa-times me-2"></i>
                    Kapat
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Reject Member Modal -->
<div class="modal fade" id="rejectMemberModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Üyeyi Reddet</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="rejectMemberForm" method="POST">
                <div class="modal-body">
                    <p>Bu üyeyi reddetmek istediğinizden emin misiniz?</p>
                    <div class="mb-3">
                        <label for="rejection_reason" class="form-label">Red Nedeni (Opsiyonel)</label>
                        <textarea class="form-control" id="rejection_reason" name="rejection_reason" rows="3"
                                  placeholder="Red nedenini belirtin..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times me-2"></i>
                        Reddet
                    </button>
            </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script>
let currentMemberId = null;

function approveMember(memberId) {
    currentMemberId = memberId;

    // Önceki mesajları temizle
    const successMessage = document.getElementById('successMessage');
    successMessage.innerHTML = '';

    // Alert'leri gizle
    document.getElementById('successAlert').classList.add('d-none');
    document.getElementById('errorAlert').classList.add('d-none');
    document.getElementById('closeApprovalModal').classList.add('d-none');

    // Modal'ı aç
    const modal = new bootstrap.Modal(document.getElementById('approveMemberModal'));
    modal.show();

    // İşlem adımlarını başlat
    startApprovalProcess(memberId);
}

function startApprovalProcess(memberId) {
    const steps = [
        { text: "İçişleri Bakanlığı sistemine bağlanılıyor...", progress: 10, delay: 1000 },
        { text: "Kullanıcı adı giriliyor...", progress: 15, delay: 500 },
        { text: "Şifre giriliyor...", progress: 20, delay: 500 },
        { text: "Giriş yapılıyor...", progress: 25, delay: 2000 },
        { text: "İçişleri Bakanlığı sistemine başarıyla giriş yapıldı", progress: 30, delay: 1000 },
        { text: "Üye kayıt sayfasına gidiliyor...", progress: 35, delay: 1500 },
        { text: "Dernek seçimi yapılıyor...", progress: 40, delay: 1000 },
        { text: "Dernek aranıyor...", progress: 45, delay: 3000 },
        { text: "Eşleşen dernek bulundu", progress: 50, delay: 1000 },
        { text: "Form alanları dolduruluyor...", progress: 55, delay: 2000 },
        { text: "Kişisel bilgiler giriliyor...", progress: 70, delay: 3000 },
        { text: "Kaydet butonuna tıklanıyor...", progress: 80, delay: 1000 },
        { text: "Kaydetme işlemi bekleniyor...", progress: 85, delay: 2000 },
        { text: "Modal aranıyor...", progress: 90, delay: 2000 },
        { text: "Modal bulundu ve görünür", progress: 95, delay: 1000 },
        { text: "Modal mesajı okunuyor...", progress: 98, delay: 1000 },
        { text: "Modal butonuna tıklanıyor...", progress: 99, delay: 500 },
        { text: "İşlem tamamlanıyor...", progress: 100, delay: 1000 }
    ];

    let currentStep = 0;
    const progressBar = document.getElementById('approvalProgress');
    const stepsList = document.getElementById('approvalSteps');

    // İlk adımı göster
    updateStep(steps[currentStep]);

    // Adımları sırayla göster
    function showNextStep() {
        currentStep++;
        if (currentStep < steps.length) {
            updateStep(steps[currentStep]);
            setTimeout(showNextStep, steps[currentStep].delay);
        } else {
            // İşlem tamamlandığında gerçek API çağrısını yap
            submitApprovalRequest(memberId);
        }
    }

    // İlk adımdan sonra devam et
    setTimeout(showNextStep, steps[currentStep].delay);

    function updateStep(step) {
        progressBar.style.width = step.progress + '%';
        progressBar.setAttribute('aria-valuenow', step.progress);

        const stepItem = document.createElement('li');
        stepItem.innerHTML = `<i class="fas fa-spinner fa-spin text-primary me-2"></i>${step.text}`;
        stepsList.appendChild(stepItem);

        // Önceki adımları güncelle
        const previousSteps = stepsList.querySelectorAll('li:not(:last-child)');
        previousSteps.forEach(item => {
            const icon = item.querySelector('i');
            icon.className = 'fas fa-check text-success me-2';
        });
    }
}

function submitApprovalRequest(memberId) {
    fetch(`/admin/members/${memberId}/approve`, {
        method: 'POST',
        headers: {
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            showSuccess(data.message, data.modal_message, data.message_type, data.message_title);
        } else {
            showError(data.message);
        }
    })
    .catch(error => {
        console.error('Error:', error);
        showError('İşlem sırasında bir hata oluştu: ' + error.message);
    });
}

function showSuccess(message, modalMessage, messageType, messageTitle) {
    const successAlert = document.getElementById('successAlert');
    const successMessage = document.getElementById('successMessage');

    // Mesaj türüne göre alert rengini ayarla
    successAlert.className = `alert alert-${messageType} d-none`;

    // Başlık ve mesajı ayarla
    const titleElement = successAlert.querySelector('h6');
    titleElement.innerHTML = `<i class="fas fa-${messageType === 'success' ? 'check' : 'exclamation'}-circle me-2"></i>${messageTitle}`;

    // Ana mesaj
    successMessage.textContent = message;

    // Modal mesajını ayrı göster
    if (modalMessage) {
        const modalMessageDiv = document.createElement('div');
        modalMessageDiv.className = 'mt-3 p-3 bg-light border rounded';
        modalMessageDiv.innerHTML = `
            <strong><i class="fas fa-comment me-2"></i>İçişleri Bakanlığı Mesajı:</strong>
            <div class="mt-2 text-muted">${modalMessage}</div>
        `;
        successMessage.appendChild(modalMessageDiv);
    }

    successAlert.classList.remove('d-none');
    document.getElementById('errorAlert').classList.add('d-none');
    document.getElementById('closeApprovalModal').classList.remove('d-none');

    // Progress bar'ı mesaj türüne göre renklendir
    const progressBar = document.getElementById('approvalProgress');
    progressBar.classList.remove('bg-primary', 'bg-success', 'bg-warning');
    if (messageType === 'success') {
        progressBar.classList.add('bg-success');
    } else {
        progressBar.classList.add('bg-warning');
    }
}

function showError(message) {
    document.getElementById('errorMessage').textContent = message;
    document.getElementById('errorAlert').classList.remove('d-none');
    document.getElementById('successAlert').classList.add('d-none');
    document.getElementById('closeApprovalModal').classList.remove('d-none');

    // Progress bar'ı kırmızı yap
    const progressBar = document.getElementById('approvalProgress');
    progressBar.classList.remove('bg-primary');
    progressBar.classList.add('bg-danger');
}

// Modal kapatma
document.getElementById('closeApprovalModal').addEventListener('click', function() {
    const modal = bootstrap.Modal.getInstance(document.getElementById('approveMemberModal'));
    modal.hide();

    // Sayfayı yenile
    setTimeout(() => {
        window.location.reload();
    }, 500);
});

function rejectMember(memberId) {
    currentMemberId = memberId;
    const modal = new bootstrap.Modal(document.getElementById('rejectMemberModal'));
    modal.show();
}

// Reject form submit
document.getElementById('rejectMemberForm').addEventListener('submit', function(e) {
    e.preventDefault();
    const form = document.createElement('form');
    form.method = 'POST';
    form.action = `/admin/members/${currentMemberId}/reject`;

    const rejectionReason = document.getElementById('rejection_reason').value;
    const reasonInput = document.createElement('input');
    reasonInput.type = 'hidden';
    reasonInput.name = 'rejection_reason';
    reasonInput.value = rejectionReason;

    form.appendChild(reasonInput);
    document.body.appendChild(form);
    form.submit();
});
</script>
{% endblock %}
