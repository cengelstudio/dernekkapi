{% extends "layout.jinja2" %}

{% block title %}Tüm Makbuzlar - DernekKapı{% endblock %}

{% block content %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Tüm Makbuzlar</h1>
    <a href="{{ url_for('admin.dashboard') }}" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>
        Geri Dön
    </a>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Sistem Geneli Makbuzlar ({{ receipts|length }} adet)</h5>
            </div>
            <div class="card-body">
                {% if receipts %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Makbuz ID</th>
                                <th>Dernek</th>
                                <th>Üye</th>
                                <th>Makbuz</th>
                                <th>Yükleme Tarihi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for receipt_data in receipts %}
                            <tr>
                                <td>
                                    <code>{{ receipt_data.receipt.id[:8] }}...</code>
                                </td>
                                <td>
                                    <span class="badge bg-primary">{{ receipt_data.association.name }}</span>
                                    <br>
                                    <small class="text-muted">{{ receipt_data.association.governmentId }}</small>
                                </td>
                                <td>
                                    <code>{{ receipt_data.receipt.memberId[:8] }}...</code>
                                </td>
                                <td>
                                    <strong>Makbuz #{{ loop.index }}</strong>
                                    <br>
                                    <small class="text-muted">{{ receipt_data.association.name }}</small>
                                </td>
                                <td>
                                    {{ receipt_data.receipt.uploadDate|datetime }}
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ url_for('static', filename=receipt_data.receipt.uploadPath) }}"
                                           class="btn btn-sm btn-outline-primary" target="_blank">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-info"
                                                onclick="showReceiptDetails('{{ receipt_data.receipt.id }}')">
                                            <i class="fas fa-info-circle"></i>
                                        </button>
                                        <button type="button" class="btn btn-sm btn-outline-success"
                                                onclick="downloadReceipt('{{ receipt_data.receipt.uploadPath }}')">
                                            <i class="fas fa-download"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-receipt fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Sistemde henüz makbuz bulunmuyor</h5>
                    <p class="text-muted">Dernekler makbuz yükledikçe burada görünecek</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Receipt Details Modal -->
<div class="modal fade" id="receiptDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Makbuz Detayları</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="receiptDetailsContent">
                <!-- Content will be loaded here -->
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script>
function showReceiptDetails(receiptId) {
    // Bu fonksiyon AJAX ile makbuz detaylarını yükleyebilir
    alert('Makbuz detayları yükleniyor... (Receipt ID: ' + receiptId + ')');
}

function downloadReceipt(filePath) {
    // Bu fonksiyon makbuzu indirebilir
    const link = document.createElement('a');
    link.href = '/static/' + filePath;
    link.download = filePath.split('/').pop();
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
}
</script>
{% endblock %}
