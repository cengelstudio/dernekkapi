{% extends "layout.jinja2" %}

{% block title %}Tüm Makbuzlar - DernekKapı{% endblock %}

{% block content %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Tüm Makbuzlar</h1>
    <a href="{{ url_for('admin.dashboard') }}" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>
        Geri Dön
    </a>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Sistem Geneli Makbuzlar ({{ receipts|length }} adet)</h5>
            </div>
            <div class="card-body">
                {% if receipts %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="d-none d-md-table-header-group">
                            <tr>
                                <th>Makbuz ID</th>
                                <th>Dernek</th>
                                <th>Üye</th>
                                <th>Makbuz</th>
                                <th>Yükleme Tarihi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for receipt_data in receipts %}
                            <tr>
                                <td>
                                    <div class="d-md-none">
                                        <strong>Makbuz ID:</strong><br>
                                    </div>
                                    <code>{{ receipt_data.receipt.id[:8] }}...</code>
                                </td>
                                <td>
                                    <div class="d-md-none">
                                        <strong>Dernek:</strong><br>
                                    </div>
                                    <span class="badge bg-primary">{{ receipt_data.association.name }}</span>
                                    <br>
                                    <small class="text-muted">{{ receipt_data.association.governmentId }}</small>
                                </td>
                                <td>
                                    <div class="d-md-none">
                                        <strong>Üye:</strong><br>
                                    </div>
                                    {% if receipt_data.member %}
                                        <strong>{{ receipt_data.member.firstName }} {{ receipt_data.member.lastName }}</strong>
                                        <br>
                                        <small class="text-muted">{{ receipt_data.member.identityNumber }}</small>
                                        <br>
                                        <span class="badge bg-info">{{ receipt_data.member.membershipYear }}</span>
                                    {% else %}
                                        <code>{{ receipt_data.receipt.memberId[:8] }}...</code>
                                        <br>
                                        <small class="text-muted text-danger">Üye bulunamadı</small>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="d-md-none">
                                        <strong>Makbuz:</strong><br>
                                    </div>
                                    <strong>Makbuz #{{ loop.index }}</strong>
                                    <br>
                                    <small class="text-muted">{{ receipt_data.association.name }}</small>
                                </td>
                                <td>
                                    <div class="d-md-none">
                                        <strong>Yükleme Tarihi:</strong><br>
                                    </div>
                                    {{ receipt_data.receipt.uploadDate|datetime }}
                                </td>
                                <td>
                                    <div class="d-md-none">
                                        <strong>İşlemler:</strong><br>
                                    </div>
                                    <div class="btn-group" role="group">
                                        <a href="{{ url_for('static', filename=receipt_data.receipt.uploadPath) }}"
                                           class="btn btn-sm btn-outline-primary" target="_blank" title="Görüntüle">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ url_for('admin.receipt_details', receipt_id=receipt_data.receipt.id) }}"
                                           class="btn btn-sm btn-outline-info" title="Üye Bilgileri">
                                            <i class="fas fa-user"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-success"
                                                onclick="downloadReceipt('{{ receipt_data.receipt.uploadPath }}')" title="İndir">
                                            <i class="fas fa-download"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-receipt fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Sistemde henüz makbuz bulunmuyor</h5>
                    <p class="text-muted">Dernekler makbuz yükledikçe burada görünecek</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>


{% endblock %}

{% block extra_js %}
<script>


function downloadReceipt(filePath) {
    // Bu fonksiyon makbuzu indirebilir
    const link = document.createElement('a');
    link.href = '/static/' + filePath;
    link.download = filePath.split('/').pop();
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
}
</script>
{% endblock %}
