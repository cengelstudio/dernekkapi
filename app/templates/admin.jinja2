{% extends "layout.jinja2" %}

{% block title %}Yönetim Paneli - DernekKapı{% endblock %}

{% block content %}
<style>
.password-field {
    font-family: 'Courier New', monospace;
    font-size: 0.8rem;
    background-color: #f8f9fa;
    border: 1px solid #dee2e6;
}

.password-toggle-btn {
    border-left: none;
}

.password-toggle-btn:hover {
    background-color: #e9ecef;
}

.login-as-btn {
    transition: all 0.2s ease;
}

.login-as-btn:hover {
    transform: scale(1.05);
}
</style>
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>
                <i class="fas fa-shield-alt text-primary me-3"></i>
                AVFED Yönetim Paneli
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active">Yönetim Paneli</li>
                </ol>
            </nav>
        </div>
        <div>
            <span class="badge bg-primary">
                <i class="fas fa-user me-1"></i>
                {{ session.full_name or session.username }}
            </span>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-6 col-lg-3 mb-3">
        <div class="stats-card primary">
            <div class="icon">
                <i class="fas fa-building"></i>
            </div>
            <div class="stats-number">{{ associations|length }}</div>
            <div class="stats-label">Toplam Dernek</div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3 mb-3">
        <div class="stats-card success">
            <div class="icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stats-number">{{ total_members }}</div>
            <div class="stats-label">Toplam Üye</div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3 mb-3">
        <div class="stats-card warning">
            <div class="icon">
                <i class="fas fa-clock"></i>
            </div>
            <div class="stats-number">{{ total_pending_members }}</div>
            <div class="stats-label">Onay Bekleyen</div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3 mb-3">
        <div class="stats-card info">
            <div class="icon">
                <i class="fas fa-receipt"></i>
            </div>
            <div class="stats-number">{{ total_receipts }}</div>
            <div class="stats-label">Toplam Makbuz</div>
        </div>
    </div>
</div>

<!-- Associations Table -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-table me-2"></i>
                    Dernek Listesi
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Dernek Adı</th>
                                <th>Kullanıcı Adı</th>
                                <th>Şifre</th>
                                <th>Üye Sayısı</th>
                                <th>Onay Bekleyen</th>
                                <th>Makbuz Sayısı</th>
                                <th>Son Giriş</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for stat in associations %}
                            <tr>
                                <td>
                                    <strong>{{ stat.association.name }}</strong>
                                </td>
                                <td>
                                    <code class="text-primary">{{ stat.association.username }}</code>
                                </td>
                                <td>
                                                                        <div class="input-group input-group-sm">
                                        <input type="password" class="form-control form-control-sm password-field"
                                               value="{{ stat.association.password }}" readonly
                                               id="password-{{ stat.association.id }}">
                                        <button class="btn btn-outline-secondary btn-sm password-toggle-btn" type="button"
                                                onclick="togglePassword('{{ stat.association.id }}')" title="Şifreyi göster/gizle">
                                            <i class="fas fa-eye" id="eye-{{ stat.association.id }}"></i>
                                        </button>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-primary">{{ stat.member_count }}</span>
                                </td>
                                <td>
                                    {% if stat.pending_count > 0 %}
                                        <span class="badge bg-warning">{{ stat.pending_count }}</span>
                                    {% else %}
                                        <span class="badge bg-secondary">0</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge bg-success">{{ stat.receipt_count }}</span>
                                </td>
                                <td>
                                    <small class="text-muted">{{ stat.formatted_last_login }}</small>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ url_for('admin.association_detail', association_id=stat.association.id) }}"
                                           class="btn btn-sm btn-outline-primary" title="Detaylar">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ url_for('admin.login_as_association', association_id=stat.association.id) }}"
                                           class="btn btn-sm btn-outline-success login-as-btn" title="Dernek adına giriş yap"
                                           onclick="return confirm('{{ stat.association.name }} derneği adına giriş yapmak istediğinizden emin misiniz?')">
                                            <i class="fas fa-sign-in-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- System Status -->
<div class="row mt-4">
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-pie text-success me-2"></i>
                    Sistem İstatistikleri
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="fw-medium">Toplam Dernek</span>
                        <span class="badge bg-primary">{{ associations|length }}</span>
                    </div>
                    <div class="progress">
                        <div class="progress-bar bg-primary" style="width: 100%"></div>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="fw-medium">Toplam Üye</span>
                        <span class="badge bg-success">{{ total_members }}</span>
                    </div>
                    <div class="progress">
                        <div class="progress-bar bg-success" style="width: {{ (total_members / 1000) * 100 if total_members <= 1000 else 100 }}%"></div>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="fw-medium">Toplam Makbuz</span>
                        <span class="badge bg-info">{{ total_receipts }}</span>
                    </div>
                    <div class="progress">
                        <div class="progress-bar bg-info" style="width: {{ (total_receipts / 1000) * 100 if total_receipts <= 1000 else 100 }}%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-cogs text-warning me-2"></i>
                    Sistem Durumu
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-success bg-opacity-10 rounded p-2 me-3">
                        <i class="fas fa-server text-success"></i>
                    </div>
                    <div>
                        <small class="text-muted d-block">Sunucu Durumu</small>
                        <strong class="text-success">Aktif</strong>
                    </div>
                </div>

                <div class="d-flex align-items-center mb-3">
                    <div class="bg-primary bg-opacity-10 rounded p-2 me-3">
                        <i class="fas fa-database text-primary"></i>
                    </div>
                    <div>
                        <small class="text-muted d-block">Veritabanı</small>
                        <strong class="text-primary">Bağlı</strong>
                    </div>
                </div>

                <div class="d-flex align-items-center mb-3">
                    <div class="bg-info bg-opacity-10 rounded p-2 me-3">
                        <i class="fas fa-shield-alt text-info"></i>
                    </div>
                    <div>
                        <small class="text-muted d-block">Güvenlik</small>
                        <strong class="text-info">Aktif</strong>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <small class="text-muted">
                        <i class="fas fa-clock me-1"></i>
                        Son kontrol: <span id="current-time"></span>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script>
function showAssociationDetails(associationId) {
    // Placeholder for association details modal
    alert('Dernek detayları yakında eklenecek!');
}

// Update current time
function updateCurrentTime() {
    const now = new Date();
    const timeString = now.toLocaleTimeString('tr-TR', {
        hour: '2-digit',
        minute: '2-digit'
    });
    document.getElementById('current-time').textContent = timeString;
}

// Toggle password visibility
function togglePassword(associationId) {
    const passwordField = document.getElementById('password-' + associationId);
    const eyeIcon = document.getElementById('eye-' + associationId);

    if (passwordField.type === 'password') {
        passwordField.type = 'text';
        eyeIcon.classList.remove('fa-eye');
        eyeIcon.classList.add('fa-eye-slash');
    } else {
        passwordField.type = 'password';
        eyeIcon.classList.remove('fa-eye-slash');
        eyeIcon.classList.add('fa-eye');
    }
}

// Update time immediately and then every minute
updateCurrentTime();
setInterval(updateCurrentTime, 60000);
</script>
{% endblock %}
